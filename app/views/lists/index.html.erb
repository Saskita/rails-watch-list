<%# ======= landing ========== %>

<div class="banner banner-accueil">
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none text-black' do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));">
            <%= cl_image_tag list.photo.key, height:200, width:350 %>
          <%# recuperer url cloudinary de la photo %>
          </div>
          <p class="text-secondary"><%= list.name.capitalize %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


