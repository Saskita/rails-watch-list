<div class="container mt-5 width-200">
<p><%= link_to "< Back to List", list_path(@list)%></p>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-4 text-center">
    <h1>Create a Bookmark 📍</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit "Create bookmark", class: "btn border mt-3" %>
      <% end %>
    </div>
  </div>
</div>

